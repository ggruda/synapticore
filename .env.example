APP_NAME=Synapticore
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Europe/Zurich
APP_URL=http://localhost:8080
APP_LOCALE=de
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=de_CH

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration (PostgreSQL with pgvector)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=synapticore
DB_USERNAME=synapticore
DB_PASSWORD=secret

# Redis Configuration (Compatible with DO Managed Redis)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=phpredis
REDIS_PREFIX=synapticore_

BROADCAST_CONNECTION=redis
CACHE_STORE=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Filesystem Configuration (DigitalOcean Spaces)
FILESYSTEM_DISK=spaces
DO_SPACES_KEY=minioadmin
DO_SPACES_SECRET=minioadmin123
DO_SPACES_REGION=fra1
DO_SPACES_BUCKET=synapticore
DO_SPACES_ENDPOINT=https://fra1.digitaloceanspaces.com
DO_SPACES_CDN_ENDPOINT=https://synapticore.fra1.cdn.digitaloceanspaces.com
DO_SPACES_USE_PATH_STYLE_ENDPOINT=false

# Local MinIO (Development)
AWS_ACCESS_KEY_ID="${DO_SPACES_KEY}"
AWS_SECRET_ACCESS_KEY="${DO_SPACES_SECRET}"
AWS_DEFAULT_REGION="${DO_SPACES_REGION}"
AWS_BUCKET="${DO_SPACES_BUCKET}"
AWS_ENDPOINT=http://minio:9000
AWS_USE_PATH_STYLE_ENDPOINT=true
AWS_URL=http://localhost:9000/synapticore

# Mail Configuration (Mailpit for Development)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@synapticore.local"
MAIL_FROM_NAME="${APP_NAME}"

# Laravel Scout Configuration
SCOUT_DRIVER=pgvector
SCOUT_PREFIX="${APP_NAME}_"
SCOUT_QUEUE=true
SCOUT_IDENTIFY=false

# Laravel Horizon Configuration
HORIZON_PREFIX=horizon:
HORIZON_NOTIFICATION_EMAIL=admin@synapticore.local
HORIZON_NOTIFICATION_SMS=
HORIZON_NOTIFICATION_SLACK_WEBHOOK=
HORIZON_NOTIFICATION_SLACK_CHANNEL=

# Laravel Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:8080,127.0.0.1,127.0.0.1:8080

# Observability Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
OTEL_SERVICE_NAME="${APP_NAME}"
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
OTEL_LOGS_EXPORTER=otlp

# Grafana Configuration
GRAFANA_URL=http://localhost:3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Prometheus Configuration
PROMETHEUS_URL=http://localhost:9090

# Loki Configuration  
LOKI_URL=http://localhost:3100

# Laravel Telescope (Optional)
TELESCOPE_ENABLED=false
TELESCOPE_CACHE_WATCHER=false
TELESCOPE_COMMAND_WATCHER=true
TELESCOPE_DUMP_WATCHER=true
TELESCOPE_EVENT_WATCHER=true
TELESCOPE_EXCEPTION_WATCHER=true
TELESCOPE_JOB_WATCHER=true
TELESCOPE_LOG_WATCHER=true
TELESCOPE_MAIL_WATCHER=true
TELESCOPE_MODEL_WATCHER=true
TELESCOPE_NOTIFICATION_WATCHER=true
TELESCOPE_QUERY_WATCHER=true
TELESCOPE_REDIS_WATCHER=true
TELESCOPE_REQUEST_WATCHER=true
TELESCOPE_GATE_WATCHER=true
TELESCOPE_SCHEDULE_WATCHER=true

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Pusher Configuration (Optional)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# OpenAI Configuration (for embeddings - optional)
OPENAI_API_KEY=
OPENAI_ORGANIZATION=

# PDF Generation
PDF_GENERATOR=dompdf

